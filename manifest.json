{
  "name": "myCourses Plus",
  "version": "0.1",
  "description": "Enhancement suite for myCourses.",
  "permissions": [
    "declarativeContent",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "https://mycourses.rit.edu/*",
    "https://www.rit.edu/ready/dashboard"
  ],
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "content_scripts": [
    {
      "matches": ["https://mycourses.rit.edu/*"],
      "exclude_matches": [
        "https://mycourses.rit.edu/d2l/loginh/",
        "https://mycourses.rit.edu/d2l/shibbolethSSO/lelogin.d2l"
      ],
      "js": ["jquery-3.5.1.min.js", "quickbar.js"],
      "css": ["quickbar.css"]
    },
    {
      "matches": ["https://mycourses.rit.edu/d2l/home"],
      "js": [
        "jquery-3.5.1.min.js",
        "hide_useless/homepage.js",
        "calendar.js",
        "covid.js"
      ],
      "css": ["calendar.css", "covid.css"]
    },
    {
      "matches": ["https://mycourses.rit.edu/d2l/*"],
      "js": ["jquery-3.5.1.min.js", "hide_useless/hideNav.js"]
    },
    {
      "matches": [
        "https://mycourses.rit.edu/d2l/lms/dropbox/user/folders_list*"
      ],
      "js": ["jquery-3.5.1.min.js", "assignments.js"],
      "css": ["assignments.css", "toggle_switch.css"]
    }
  ],
  "background": {
    "scripts": [
      "jquery-3.5.1.min.js",
      "background.js"
    ]
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    }
  },
  "icons": {
    "16": "images/get_started16.png",
    "32": "images/get_started32.png",
    "48": "images/get_started48.png",
    "128": "images/get_started128.png"
  },
  "manifest_version": 2,
  "web_accessible_resources": ["images/get_started128.png"],
  "browser_specific_settings": {
    "gecko": {
      "id": "mycoursesplus@fake.edu",
      "strict_min_version": "42a1"
    }
  }
}
