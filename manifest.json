{
  "name": "myCourses Plus",
  "version": "0.1",
  "description": "Enhancement suite for myCourses.",
  "permissions": [
    "declarativeContent",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "https://mycourses.rit.edu/*",
    "https://www.rit.edu/ready/dashboard"
  ],
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["https://mycourses.rit.edu/*"],
      "js": ["jquery-3.5.1.min.js", "quickbar.js"],
      "css": ["quickbar.css"]
    },
    {
      "matches": ["https://mycourses.rit.edu/d2l/home"],
      "js": [
        "hide_useless/homepage.js",
        "calendar.js",
        "covid.js",
        "rit_links.js"
      ],
      "css": ["calendar.css", "covid.css", "rit_links.css"]
    },
    {
      "matches": ["https://mycourses.rit.edu/d2l/*"],
      "js": ["hide_useless/hideNav.js"],
      "css": ["hide_useless/hideNav.css"]
    },
    {
      "matches": [
        "https://mycourses.rit.edu/d2l/lms/dropbox/user/folders_list*"
      ],
      "js": ["assignments.js"],
      "css": ["assignments.css", "toggle_switch.css"]
    }
  ],
  "background": {
    "scripts": [
      "jquery-3.5.1.min.js",
      "background.js",
      "calendar_background.js",
      "assignments_interceptor.js"
    ]
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    }
  },
  "icons": {
    "16": "images/get_started16.png",
    "32": "images/get_started32.png",
    "48": "images/get_started48.png",
    "128": "images/get_started128.png"
  },
  "manifest_version": 2,
  "web_accessible_resources": [
    "images/get_started128.png",
    "images/book-open.svg",
    "images/feather.svg",
    "images/life-buoy.svg",
    "images/radio.svg",
    "images/video.svg",
    "images/turnitin.svg",
    "images/group.svg"
  ]
}
